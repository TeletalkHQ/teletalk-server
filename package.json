{
  "name": "teletalk-server",
  "author": "S-STALWART-S",
  "description": "teletalk messenger app (server)",
  "license": "GPT-3",
  "version": "1.0.0",
  "main": "index.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/S-STALWART-S/teletalk-server"
  },
  "type": "module",
  "scripts": {
    "build": "node ./esbuild/index.ts",
    "check:format": "prettier --write ./",
    "check:lint": "eslint ./",
    "check:lint:default": "eslint 'src/**/*.ts'",
    "check:security": "snyk test & snyk code test",
    "check:style": "npm run check:format && npm run check:lint",
    "dev": "npm run start:dev",
    "git:prepare": "husky install",
    "start": "npm run start:production",
    "start:dev": "cross-env NODE_ENV=development nodemon --trace-warnings ./index.ts",
    "start:production": "cross-env NODE_ENV=production node ./index.ts",
    "start:production:local": "cross-env NODE_ENV=production_local node ./index.ts",
    "test-runner": "mocha ./index.ts -- --trace-warnings --delay --recursive --exit",
    "test:coverage": "cross-env COVERAGE=true nyc npm run test:dev",
    "test:dev": "cross-env NODE_ENV=test_development npm run test-runner",
    "test:dev:with-badge": "cross-env MOCHA_BADGE_GEN_OUTPUT=./test/tests.svg npm run test:dev -- -- --reporter mocha-badge-generator",
    "test:production": "cross-env NODE_ENV=test_production npm run test-runner",
    "test:production:local": "cross-env NODE_ENV=test_production_local npm run test-runner"
  },
  "dependencies": {
    "@redis/json": "^1.0.4",
    "@sindresorhus/is": "^5.3.0",
    "@socket.io/cluster-adapter": "^0.2.1",
    "@socket.io/sticky": "^1.0.3",
    "axios": "^1.3.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "custom-typeof": "^2.0.2",
    "debug": "^4.3.4",
    "defer-to-connect": "^2.0.1",
    "dotenv": "^16.0.3",
    "fastest-validator": "^1.16.0",
    "fs-extra": "^11.1.0",
    "generate-password": "^1.7.0",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "logger-chalker": "^2.0.2",
    "module-alias": "^2.2.2",
    "mongoose": "^6.10.0",
    "mongoose-unique-validator": "^3.1.0",
    "morgan": "^1.10.0",
    "nanoid": "^4.0.1",
    "nodemailer": "^6.9.1",
    "nodemailer-smtp-transport": "^2.7.4",
    "pretty-error": "^4.0.0",
    "redis": "^4.6.5",
    "serve-favicon": "^2.5.0",
    "simple-trier": "^3.1.0",
    "socket.io": "^4.6.1",
    "utility-store": "^10.0.1",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0",
    "@babel/eslint-parser": "^7.19.1",
    "@cspell/eslint-plugin": "^6.26.3",
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/confusing-browser-globals": "^1.0.0",
    "@types/fs-extra": "^11.0.1",
    "@types/jest": "^29.4.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/lodash": "^4.14.191",
    "@types/module-alias": "^2.0.1",
    "@types/mongoose": "^5.11.97",
    "@types/mongoose-unique-validator": "^1.0.7",
    "@types/node": "^18.14.1",
    "@types/socket.io": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "confusing-browser-globals": "^1.0.11",
    "esbuild": "^0.17.10",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "eslint-plugin-sonarjs": "^0.18.0",
    "eslint-plugin-testing-library": "^5.10.2",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "lint-staged": "^13.1.2",
    "madge": "^6.0.0",
    "nodemon": "^2.0.20",
    "ping": "^0.4.2",
    "prettier": "2.8.4",
    "snyk": "^1.1109.0",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5",
    "yargs": "^17.7.1"
  },
  "engines": {
    "node": ">=14.10.0"
  },
  "lint-staged": {
    "./src/*": [
      "eslint",
      "prettier --write"
    ],
    "./test/*": [
      "eslint",
      "prettier --write"
    ]
  },
  "_moduleAliases": {
    "~": ".",
    "@": "./src",
    "#": "./public",
    "$": "./test"
  },
  "keywords": [
    "teletalk",
    "messenger"
  ]
}
