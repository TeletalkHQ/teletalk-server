{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext"],
    "module": "CommonJS",
    "noImplicitReturns": true,
    "outDir": "./lib",
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "#/*": ["./public/*"],
      "$/*": ["./test/*"]
    }
  },
  "exclude": ["node_modules", "**/__tests__/*", "test"],
  "include": ["src/**/*.ts", "test/**.*.js"]
}
