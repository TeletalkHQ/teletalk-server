{
  "env": {
    "commonjs": true,
    "es2021": true,
    "mocha": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:@cspell/recommended"],
  "globals": {
    "expressRequest": true,
    "expressResponse": true,
    "logger": true
  },
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "plugins": [
    "chai-friendly",
    "@cspell"
    //  "security"
  ],
  "rules": {
    "@cspell/spellchecker": [
      "warn",
      {
        "ignoreImports": false,
        "ignoreImportProperties": false
      }
    ],
    "arrow-parens": "warn",
    "chai-friendly/no-unused-expressions": 2,

    // "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "no-unused-expressions": 0,
    "no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "args": "after-used",
        "ignoreRestSiblings": true,
        "argsIgnorePattern": "^_"
      }
    ],
    "no-use-before-define": [
      "error",
      {
        "functions": true,
        "classes": true,
        "variables": true,
        "allowNamedExports": false
      }
    ],
    "quotes": ["error", "double"],
    "semi": ["error", "always"]
  }
}

