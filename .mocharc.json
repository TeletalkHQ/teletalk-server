{
  "extension": ["ts"],
  "node-option": [
    "experimental-specifier-resolution=node",
    "loader=./loader.js",
    "trace-warnings",
    "no-warnings"
  ],
  "timeout": 60000,
  "ui": "bdd",
  "watch-files": ["testSrc/**/*.spec.ts"],
  "reporter": "spec",
  "delay": true,
  "recursive": true,
  "exit": true
}
